<?xml version="1.0"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="
                       http://www.liquibase.org/xml/ns/dbchangelog
                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="20180605_004440" author="baimurzin">
        <addColumn tableName="orders">
            <column name="order_sum" type="numeric"/>
        </addColumn>
        <addColumn tableName="orders">
            <column autoIncrement="true" name="inv_id" type="SERIAL">
                <constraints unique="true"/>
            </column>
        </addColumn>
        <addColumn tableName="orders">
            <column name="description" type="varchar(1000)"/>
        </addColumn>
        <addColumn tableName="orders">
            <column name="currency" type="varchar(20)"/>
        </addColumn>
        <addColumn tableName="orders">
            <column name="email" type="varchar(100)"/>
        </addColumn>
        <addColumn tableName="orders">
            <column name="culture" type="varchar(20)"/>
        </addColumn>
        <createSequence
                        incrementBy="1"
                        schemaName="public"
                        sequenceName="inv_seq"
                        startValue="5500"/>
    </changeSet>
</databaseChangeLog>